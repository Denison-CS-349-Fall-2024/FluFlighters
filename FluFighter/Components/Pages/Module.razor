@page "/module"
@inject NavigationManager Navigation

<h2>Flu Education</h2>

<div class="module-container">
    <a href="/flu-education/what-is-flu" class="module" style="background-color: #FFCDD2;">
        <h3>What is Flu?</h3>
        <p>Learn about what flu is and how it spreads.</p>
    </a>
    <a href="/flu-education/symptoms" class="module" style="background-color: #C8E6C9;">
        <h3>Symptoms</h3>
        <p>Find out the common symptoms of flu.</p>
    </a>
    <a href="/flu-education/causes" class="module" style="background-color: #BBDEFB;">
        <h3>Causes</h3>
        <p>Understand what causes flu and how it affects the body.</p>
    </a>
    <a href="/flu-education/prevention" class="module" style="background-color: #FFE082;">
        <h3>Prevention</h3>
        <p>Discover ways to prevent the flu and stay healthy.</p>
    </a>
    <a href="/flu-education/treatment" class="module" style="background-color: #D1C4E9;">
        <h3>Treatment</h3>
        <p>Learn about the treatments available for flu.</p>
    </a>
    <a href="/flu-education/recovery" class="module" style="background-color: #FFCCBC;">
        <h3>Recovery</h3>
        <p>Find out how long recovery takes and tips for healing.</p>
    </a>
</div>

<style>
    body {
        background-color: #F5F5F5; /* Light grey background */
    }

    .module-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        padding: 20px;
    }

    .module {
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        text-decoration: none;
        color: black;
    }

        .module:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

        .module h3 {
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

        .module p {
            font-size: 1rem;
            color: #666;
        }
</style>



