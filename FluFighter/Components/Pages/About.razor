@page "/about"

@* About Page for Flu Awareness Hub *@

<PageTitle>About Us</PageTitle>

<div class="container-fluid text-center">
    <header class="p-5" style="background-color: #4A90E2; color: white;">
        <h1>Meet the Developers Behind Flu Fighters</h1>
        <p>Our passionate team of developers is dedicated to bringing you a fun and informative app to help you stay healthy!</p>
    </header>

    <section class="p-5" style="background-color: #F9F9F9;">
        <div class="row justify-content-center">
            @foreach (var dev in developers)
            {
                <div class="col-md-3 p-4">
                    <div class="card shadow" style="border-top: 5px solid #4A90E2;">
                        <img src="images/@dev.ImageFile" alt="@dev.Name" class="card-img-top rounded-circle mx-auto d-block" style="width: 150px; height: 150px; object-fit: cover; margin-top: 15px;">
                        <div class="card-body">
                            <h4 class="card-title" style="color: #4A90E2;">@dev.Name</h4>
                            <p class="card-text">@dev.Role</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>&copy; 2024 Flu Fighters Denison. All Rights Reserved.</p>
    </footer>
</div>

